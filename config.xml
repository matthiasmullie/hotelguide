<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="us.envy.HotelGids" version="1.0.0" defaultlocale="nl">
    <name xml:lang="nl">HotelGids</name>

    <description xml:lang="nl">
        De HotelGids van last-minute-vakanties.be verzamelt de hotels van online aanbieders en laat je eenvoudig filteren op locatie of prijs.
        Vind in 1 oogopslag alle hotels in de buurt van je huidige of favoriete vakantiebestemming en vergelijk in prijs met een ander hotel een straat verderop!
    </description>

    <author href="http://envy.us" email="hotelgids@envy.us">envy.us</author>

    <!-- Details: https://build.phonegap.com/docs/config-xml -->

    <!-- Both landscape & portrait are supported -->
    <preference name="orientation" value="default" />

    <!-- Supported platforms -->
    <gap:platforms>
        <gap:platform name="ios" minVersion="4.1" />
        <gap:platform name="winphone" minVersion="8.0" />
        <gap:platform name="android" minVersion="3.0" />
        <gap:platform name="blackberry" />
    </gap:platforms>

    <!-- App root -->
    <content src="index.html" />

    <!-- API permissions -->
    <feature name="http://api.phonegap.com/1.0/geolocation" />
    <feature name="http://api.phonegap.com/1.0/network" />

    <!-- Suspending app exits it for real -->
    <preference name="exit-on-suspend" value="true" />

    <!-- Allow external resources: LMV, Google (Maps, Analytics) services, hotel providers, ... -->
    <access origin="*" />

    <!-- Hi-res icon, should work for all devices/sizes; otherwise, specific icons can be added to res/icon -->
    <icon src="icon.png" />

    <!-- Apple can apply it's icon gloss -->
    <preference name="prerendered-icon" value="false" />

    <!-- Default splash screen, fallback for when no splash is specified -->
    <gap:splash src="res/screen/ios/launch_iphone.png" />

    <!-- iDevice splash screens -->
    <gap:splash src="res/screen/ios/launch_iphone.png" width="320" height="480" />
    <gap:splash src="res/screen/ios/launch_iphone@2x.png" width="640" height="960" />
    <gap:splash src="res/screen/ios/launch_iphone5.png" width="640" height="1136" />
    <gap:splash src="res/screen/ios/launch_ipad_landscape.png" width="1024" height="768" />
    <gap:splash src="res/screen/ios/launch_ipad_portrait.png" width="768" height="1024" />
    <gap:splash src="res/screen/ios/launch_ipad_landscape@2x.png" width="2048" height="1536" />
    <gap:splash src="res/screen/ios/launch_ipad_portrait@2x.png" width="1536" height="2048" />

    <!-- WinPhone splash screen -->
    <gap:splash src="res/screen/winphpne/launch_wvga.jpg" gap:platform="winphone" />

    <!-- Android splash screens -->
    <!-- @todo: Landscape is currently not supported by PhoneGap; check again later -->
    <!-- @todo: not yet sure about dimensions/using iDevice images for now -->
    <gap:splash src="res/screen/ios/launch_iphone.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/ios/launch_iphone.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/ios/launch_iphone@2x.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/ios/launch_iphone@2x.png" gap:platform="android" gap:density="xhdpi" />

    <!-- Blackberry splash screen -->
    <!-- @todo: not yet sure about dimensions/using iDevice images for now -->
    <gap:splash src="res/screen/ios/launch_iphone.png" gap:platform="blackberry" />
</widget>
